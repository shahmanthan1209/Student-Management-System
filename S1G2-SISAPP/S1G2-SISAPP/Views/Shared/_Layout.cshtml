<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SIS ASP.NET MVC Web Application</title>
    <link rel="icon" href="sitelogo.svg" type="image/svg" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/teachers.ico" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-header pull-left">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/teachers.ico" alt="Site Logo" style="height:25px; width: 25px" />
                    </a>
                </div>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--@Html.ActionLink("SIS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
                <!-- //<p class="SIS">
                     <a href="@Url.Action("Index", "Home")">
                         <img src="~/teachers.ico" alt="Site Logo" style="height:25px; width: 25px />
                     </a>
                  </p>-->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li>@Html.ActionLink("Students", "Index", "Students")</li>

                    <li>@Html.ActionLink("Instructors", "Index", "Instructors")</li>

                    <li>@Html.ActionLink("Departments", "Index", "Departments")</li>

                    <li>@Html.ActionLink("Courses", "Index", "Courses")</li>

                    <li>@Html.ActionLink("Study Terms", "Index", "StudyTerms")</li>

                    <li>@Html.ActionLink("Teaching Assignments", "Index", "TeachingAssignments")</li>

                    <li>@Html.ActionLink("Course Registrations", "Index", "Registrations")</li>

                    <li>@Html.ActionLink("About", "About", "Home")</li>

                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SIS ASP.NET MVC Web Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
